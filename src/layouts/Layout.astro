---
import '@/styles/global.css'
import AppHeader from '@/components/AppHeader.astro'
import AppFooter from '@/components/AppFooter.astro'

export interface Props {
  title: string
  description: string
  cannonical?: string
  keywords: string
}

const { title, description, cannonical, keywords } = Astro.props as Props
---

<!doctype html>
<html lang='pl'>
  <head>
    <script
      id='Cookiebot'
      src='https://consent.cookiebot.com/uc.js'
      data-cbid='c525239d-1de8-4a1b-aa48-533f3d02fa41'
      data-blockingmode='auto'
      type='text/javascript'></script>
    <!-- Google Tag Manager -->
    <script>
      ;(function (w, d, s, l, i) {
        w[l] = w[l] || []
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : ''
        j.async = true
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
        f.parentNode.insertBefore(j, f)
      })(window, document, 'script', 'dataLayer', 'GTM-WT479K9L')
    </script>
    <!-- End Google Tag Manager -->
    <script
      src='https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js'
      defer></script>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Sour+Gummy&display=swap'
      rel='stylesheet'
    />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Varela+Round&display=swap');
    </style>
    <link
      href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap'
      rel='stylesheet'
    />
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicon.ico' type='image/x-icon' />

    <meta name='robots' content='index, follow' />
    <meta name='generator' content={Astro.generator} />
    <link rel='canonical' href={cannonical} />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='keywords' content={keywords} />
    <meta property='og:type' content='website' />

    <meta
      property='og:title'
      content={'Fototograf okolicznościowy Puchaczów - Robert Lis'}
    />
    <meta
      property='og:description'
      content={'Doświadczony fotograf okolicznościowy z Puchaczowa - śluby, chrzciny i komunie.'}
    />
    <meta property='og:url' content={'https://photofox.pl'} />
    <meta property='og:image' content={'https://photofox.pl/og-image.png'} />
    <meta property='og:locale' content={'pl'} />

    <meta name='DC.identifier' content='https://photofox.pl' />
    <meta name='DC.creator' content='Kacper Saweczko' />
    <meta name='DC.language' content='pl' />
    <meta name='DC.type' content='website' />
    <meta name='DC.format' content='text/html' />
    <meta name='DC.rights' content='Photofox Robert Lis' />
    <meta
      name='DC.subject'
      content={'Forografia ślubna, fotografia na chrzest i komunię świętą. Doświadczony fotograf Robert Lis.'}
    />
    <script is:inline type='application/ld+json'>
      {
        "@context": "https://schema.org",
        "@type": "LegalService",
        "name": "Photofox Robert Lis",
        "image": "https://photofox.pl/logo.ico",
        "@id": "https://photofox.pl",
        "url": "https://photofox.pl",
        "telephone": "+48 603 086 198",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Stara Wieś 59",
          "addressLocality": "Puchaczów",
          "postalCode": "21-013",
          "addressCountry": "PL"
        },

        "founder": {
          "@type": "Person",
          "name": "Robert Lis"
        },

        "description": "Fotograf okolicznościowy - fotografia ślubna, fotografia chrztu i pierwszej komunii świętej.",
        "email": "photofox102@gmail.com"
      }
    </script>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src='https://www.googletagmanager.com/ns.html?id=GTM-WT479K9L'
        height='0'
        width='0'
        style='display:none;visibility:hidden'></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <AppHeader />
    <main>
      <slot />
    </main>
    <AppFooter />
  </body>
</html>
